@model IEnumerable<GameStore.Client.Models.GameViewModel>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="my__container">

    @{
        Html.RenderPartial("Sidebar");
    }

    <div class="mt-4">

        <div class="d-flex justify-content-center pb-4">
            <button type="button" class="btn" id="panel-link">@Html.ActionLink("Create New", "Create")</button>
        </div>
        <div class="container-lg">
            <div class="row ml-2" id="games">
                @{
                    Html.RenderPartial("GamesPartial", Model);
                }
            </div>
            @if (Model.Count() == 0)
            {
                <div class="container">
                    <div class="alert alert-info w-100" role="alert">
                        No games!
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center pb-4">
            <button type="button" class="btn mr-2" id="panel-link">@Html.ActionLink("Genres", "../Genre/Index")</button>
            <button type="button" class="btn" id="panel-link">@Html.ActionLink("Developers", "../Developer/Index")</button>
        </div>
    </div>
</div>
